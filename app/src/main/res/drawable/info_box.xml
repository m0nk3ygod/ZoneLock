<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 바깥 테두리 (연회색) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1F9FF"/> <!-- 배경색 -->
            <stroke android:width="1dp" android:color="#C2DBF6"/> <!-- 바깥 테두리 (연회색) -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- 안쪽 테두리 (기존 회색) -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- 배경 투명하게 -->
            <stroke android:width="1dp" android:color="#C2DBF6"/> <!-- 안쪽 테두리 (기존 회색) -->
            <corners android:radius="14dp"/>
        </shape>
    </item>

</layer-list>
