<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_background">

    <!-- 상단 텍스트 -->
    <TextView
        android:id="@+id/HomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/title_font2"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="84dp"
        android:translationY="55dp" />

    <!-- 부제목 -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JoneLock"
        android:textColor="#9A9A9A"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="141dp"
        android:translationY="137dp" />

    <!-- 텍스트 상자 -->
    <FrameLayout
        android:id="@+id/infoBoxShape"
        android:layout_width="360dp"
        android:layout_height="125dp"
        android:background="@drawable/info_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="0dp"
        android:translationY="285dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_ssid_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 연결된 SSID : "
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txt_location_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 위도 / 경도: "
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/infoBoxShape2"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:background="@drawable/info_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="0dp"
        android:translationY="422dp">

        <TextView
            android:id="@+id/person"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제작자 : 민서정, 조주환, 이승원, 김아영"
            android:textSize="18sp" />
    </FrameLayout>>


    <FrameLayout
        android:id="@+id/infoBoxShape3"
        android:layout_width="360dp"
        android:layout_height="190dp"
        android:background="@drawable/info_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="0dp"
        android:translationY="491dp">

        <LinearLayout
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제작자 의도"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="- 초중고 학교에서 학생들에게 지급되는 교육 목적의 스마트 기기를 학교 외 장소에서 사용을 금하기 위함.\n
                \n- 지급된 스마트 기기 도난 시 교육 자료 혹은 (학교, 학생) 정보 유출을 방지하기 위함.\n
                \n- 외부 반출로 인한 스마트 기기 파손 및 훼손을 방지하기 위함."
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>


    <View
        android:id="@+id/grayBox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/gray_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="35dp"
        android:translationY="200dp" />

    <View
        android:id="@+id/whiteBox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/white_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="25dp"
        android:translationY="188dp" />

    <Button
        android:id="@+id/btn_to_map_home"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/skyblue_box"
        android:fontFamily="@font/title_font"
        android:text="사용가능지역"
        android:textColor="#37474F"
        android:textSize="18sp"
        android:transformPivotY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:translationX="30dp"
        android:translationY="192dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
